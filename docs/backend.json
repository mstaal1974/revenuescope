{
  "entities": {
    "qualification": {
      "title": "Qualification",
      "description": "A single RTO qualification record.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the record, composed of rtoCode_qualificationCode."
        },
        "rtoCode": {
          "type": "string",
          "description": "The RTO code."
        },
        "rtoLegalName": {
          "type": "string",
          "description": "The legal name of the RTO."
        },
        "code": {
          "type": "string",
          "description": "The qualification code."
        },
        "title": {
          "type": "string",
          "description": "The title of the qualification."
        },
        "usageRecommendation": {
          "type": "string",
          "description": "Usage recommendation, e.g., 'Current'."
        },
        "delivery": {
          "type": "object",
          "properties": {
            "QLD": { "type": "boolean" },
            "SA": { "type": "boolean" },
            "NSW": { "type": "boolean" },
            "VIC": { "type": "boolean" },
            "TAS": { "type": "boolean" },
            "NT": { "type": "boolean" },
            "WA": { "type": "boolean" },
            "ACT": { "type": "boolean" },
            "Overseas": { "type": "boolean" }
          }
        },
        "implicitScope": {
            "type": "boolean",
            "description": "Indicates if the scope is implicit."
        },
        "nrtType": {
            "type": "string",
            "description": "The type of the National Training register item."
        },
        "scopeEndDate": {
            "type": "string",
            "format": "date",
            "description": "The end date of the scope."
        },
        "scopeExtent": {
            "type": "string",
            "description": "The extent of the scope."
        },
        "scopeStartDate": {
            "type": "string",
            "format": "date",
            "description": "The start date of the scope."
        },
        "scopeType": {
            "type": "string",
            "description": "The type of the scope."
        }
      },
      "required": ["id", "rtoCode", "code", "title"]
    },
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "lead": {
      "title": "Lead",
      "description": "A lead captured from the website.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the lead."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the lead."
        },
        "phone": {
          "type": "string",
          "description": "Phone number of the lead."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the lead was created."
        }
      },
      "required": ["name", "email", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/qualifications/{qualificationId}": {
      "schema": {
        "$ref": "#/entities/qualification"
      },
      "description": "Stores individual RTO qualification documents."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public user profile information."
    },
    "/leads/{leadId}": {
      "schema": {
        "$ref": "#/entities/lead"
      },
      "description": "Stores captured lead information from contact forms."
    }
  }
}
